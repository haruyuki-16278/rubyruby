# EditorConfig is awesome: https://EditorConfig.org

# トップレベルの設定
root = true

# 全てのファイルのデフォルト設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rubyファイル用の設定
[*.{rb,rake,gemspec}]
indent_size = 2
indent_style = space

# Rakefileの設定
[{Rakefile,Gemfile}]
indent_size = 2
indent_style = space

# HTMLファイル用の設定
[*.{html,htm}]
indent_size = 2

# Markdown用の設定
[*.md]
trim_trailing_whitespace = false
